{
    "env": {
        "node": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "prefer-const": "error",
        "no-var": "error",
        "eqeqeq": ["error", "always"],
        "curly": ["error", "multi-line"],
        "semi": ["error", "always"]
    }
}