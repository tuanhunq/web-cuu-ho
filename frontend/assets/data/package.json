{
  "name": "cuuho-toanquoc-frontend",
  "version": "1.0.0",
  "description": "Static frontend (HTML/CSS/JS) for Cứu Hộ Toàn Quốc demo",
  "private": true,
  "scripts": {
    "start": "npx http-server frontend -p 8080 -c-1",
    "dev": "npx http-server frontend -p 8080 -c-1",
    "build": "npx esbuild frontend/assets/js/main.js --bundle --minify --sourcemap --outfile=frontend/dist/bundle.js",
    "watch": "npx esbuild frontend/assets/js/main.js --bundle --sourcemap --outfile=frontend/dist/bundle.js --watch"
  },
  "devDependencies": {
    "esbuild": "^0.18.18",
    "http-server": "^14.1.1"
  }
}
